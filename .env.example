# PostgreSQL Database Configuration
# Copy this file to .env and update with your credentials

# Database connection
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PostgREST Configuration
PGRST_DB_URI=postgresql://postgres:postgres@db:5432/postgres
PGRST_DB_SCHEMAS=public
PGRST_DB_ANON_ROLE=postgres
PGRST_SERVER_HOST=0.0.0.0
PGRST_SERVER_PORT=3000
PGRST_LOG_LEVEL=info

# Optional: Database Pool Size (default: 10)
# PGRST_DB_POOL=10

# Optional: CORS Configuration
# Uncomment and set for production web access
# PGRST_SERVER_CORS_ALLOWED_ORIGINS=https://yourdomain.com
